<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2F5F8"
    android:orientation="vertical">

<!--    gasolina-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Gasolina:"
        android:textAlignment="center"
        android:textColor="#0047FB"
        android:textSize="50sp"></TextView>

    <EditText
        android:id="@+id/totalKm"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Total estimado de quilômetros"
        android:padding="10dp" />

    <EditText
        android:id="@+id/mediaKm"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Média de quilômetro por litro"
        android:padding="10dp" />

    <EditText
        android:id="@+id/custoL"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Custo médio por litro"
        android:padding="10dp" />

    <EditText
        android:id="@+id/totalVeiculos"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Total de veículos"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Total:"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20sp"></TextView>

    <Button
        android:id="@+id/adcGasolina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#0047FB"
        android:text="ADICIONAR A VIAGEM?" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Nota: informações vazias serão excluidas do calculo"
        android:textAlignment="center"
        android:textColor="#ED0101"
        android:textSize="20sp"></TextView>
<!--tarifa aerea-->

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Tarifa aérea"
        android:textAlignment="center"
        android:textColor="#0047FB"
        android:textSize="50sp"></TextView>

    <EditText
        android:id="@+id/custoEpessoa"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Custo estimado por pessoa"
        android:padding="10dp" />

    <EditText
        android:id="@+id/aluguelaVeiculo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Aluguel de veiculo"
        android:padding="10dp" />

    <!--    refeições -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Refeições:"
        android:textAlignment="center"
        android:textColor="#0047FB"
        android:textSize="50sp"></TextView>

    <EditText
        android:id="@+id/custoRefeicao"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Custo estimado por refeição"
        android:padding="10dp" />
    <EditText
        android:id="@+id/refeicoesDia"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Custo estimado por refeição"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Total:"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20sp"></TextView>

    <Button
        android:id="@+id/btnSalvar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#0047FB"
        android:text="ADICIONAR A VIAGEM?" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Nota: informações vazias serão excluidas do calculo"
        android:textAlignment="center"
        android:textColor="#ED0101"
        android:textSize="20sp"></TextView>

    <!--    hospedagem -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Hospedagem:"
        android:textAlignment="center"
        android:textColor="#0047FB"
        android:textSize="50sp"></TextView>

    <EditText
        android:id="@+id/custoHospedagem"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Custo médio(por noite)
"
        android:padding="10dp" />
    <EditText
        android:id="@+id/totalNoites"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Total de noites"
        android:padding="10dp" />
    <EditText
        android:id="@+id/totalQuartos"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Total de quartos"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Total:"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20sp"></TextView>

    <Button
        android:id="@+id/btnSalvar9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#0047FB"
        android:text="ADICIONAR A VIAGEM?" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Nota: informações vazias serão excluidas do calculo"
        android:textAlignment="center"
        android:textColor="#ED0101"
        android:textSize="20sp"></TextView>


    <!--    Entreterimento/diversos -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Entreterimento/Diversos:"
        android:textAlignment="center"
        android:textColor="#0047FB"
        android:textSize="50sp"></TextView>

    <EditText
        android:id="@+id/vilaEncantada"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Vila encantada
"
        android:padding="10dp" />
    <EditText
        android:id="@+id/zooPomerode"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Zoo pomerode"
        android:padding="10dp" />
    <EditText
        android:id="@+id/imprevistos"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Imprevistos"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Total:"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20sp"></TextView>

    <Button
        android:id="@+id/btnSalvar10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#0047FB"
        android:text="ADICIONAR A VIAGEM?" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Nota: informações vazias serão excluidas do calculo"
        android:textAlignment="center"
        android:textColor="#ED0101"
        android:textSize="20sp"></TextView>


</LinearLayout>