<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/edtDestino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Destino" />
    <EditText
        android:id="@+id/duracao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Duração da viagem" />
    <EditText
        android:id="@+id/quantidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Numero de viajantes" />
    <Button
        android:id="@+id/btnNviagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NOVA VIAGEM"
        android:backgroundTint="#0047FB"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/btnViagens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VIAGENS"
        android:backgroundTint="#0047FB"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnDeletar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DELETAR USUARIO"
        android:backgroundTint="#C80E00"
        android:layout_marginTop="10dp"/>

</LinearLayout>